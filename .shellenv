### Paths, Environments, etc. ###
#read path-file
while read LINE;
 do export PATH=$PATH:$LINE;
done < ~/paths.txt

#derby
export DERBY_HOME=/home/piru/glassfishv3/javadb

#java
export JAVA_HOME=/usr/lib/jvm/java-7-oracle

# gvm
[[ -s "$HOME/.gvm/bin/gvm-init.sh" ]] && source "$HOME/.gvm/bin/gvm-init.sh"

export PERL_LOCAL_LIB_ROOT="/home/piru/perl5";
export PERL_MB_OPT="--install_base /home/piru/perl5";
export PERL_MM_OPT="INSTALL_BASE=/home/piru/perl5";
export PERL5LIB="/home/piru/perl5/lib/perl5/x86_64-linux-gnu-thread-multi:/home/piru/perl5/lib/perl5";
export PATH="/home/piru/perl5/bin:$PATH";

# Android SDK
export ANDROID_HOME=/home/piru/android-sdk-linux

# EC2 tools
export EC2_HOME=/home/piru/ec2-api
export PATH=$PATH:$EC2_HOME/bin
export AWS_ACCESS_KEY=NOPE
export AWS_SECRET_KEY=NOPE
export EC2_URL=https://ec2.eu-west-1.amazonaws.com

# NVM
source ~/.nvm/nvm.sh

# rbenv
eval "$(rbenv init - --no-rehash)"

# pyenv
export PYENV_ROOT="$HOME/.pyenv"
export PATH="$PYENV_ROOT/bin:$PATH"
eval "$(pyenv init -)"
